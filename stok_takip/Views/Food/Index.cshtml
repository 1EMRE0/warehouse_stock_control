@using X.PagedList;
@using X.PagedList.Mvc.Core

@model IPagedList<stok_takip.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food List</h1>
<br />

<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Food Name</td>
        <td>Price</td>
        <td>Stock</td>
        <td>Category Name</td>
        <td>Delete</td>
        <td>Update</td>
        <td>Details</td>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <th> @x.FoodId </th>
            <td> @x.Name </td>
            <td> @x.Price </td>
            <td> @x.Stock </td>
            <td> @x.Category.CategoryName </td>
            <td> <a href="/Food/DeleteFood/@x.FoodId" class="btn btn-danger">Delete</a> </td>
            <td> <a href="/Food/FoodGet/@x.FoodId" class="btn btn-success">Update</a> </td>
            <td> <a href="#" class="btn btn-info">Details</a> </td>



        </tr>


    }

</table>
@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index",new {page}))
<a href="/Food/AddFood" class="btn btn-primary">New Food</a>

